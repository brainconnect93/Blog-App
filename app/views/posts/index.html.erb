<h2>The User Post</h2>
<div>
<div class="container">
        <div class="image">
          <img src="<%= @user.Photo %>" class="img-user" alt="<%= @user.Name %>" />
        </div>
        <div class="details">
          <h1 class="details-head"><%= @user.Name %></h1>
          <p class="details-para">Number of posts: <%= @user.PostsCounter || 0 %></p>
        </div>
</div>
<% @user.posts.each do |post| %>
<section>
  <%= link_to user_post_path(@user, post) do %>%
    <h2><%= post.title %></h2>
 <% end %>
    <p><%= post.text%></p>
    <div class="post-details">
      <span class="post-details-para">Comments: <%= post.comments_counter || 0 %></span>
      <span class="post-details-para">Likes: <%= post.likes_counter || 0 %></span>
    </div>
</section>

<ul>
 <% if post.recent_comments.length == 0 %>
    <p><%= No comments are added! %></p>
    <% else %>
    <% post.recent_comments.each do |comment| %>
      <li><%= comment.users.Name %><%= comment.text %></li>
 <% end %>
 <% end %>
 <% end %>
</ul>
    <button>
        Pagination
    </button>
</div>