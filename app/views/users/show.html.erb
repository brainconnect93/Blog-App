<h1>My User Profile</h1>
<div class="container">
        <div class="image">
          <img src="<%= @user.Photo %>" class="img-user" alt="<%= @user.Name %>" />
        </div>
        <div class="details">
          <h1 class="details-head"><%= @user.Name %></h1>
          <p class="details-para">Number of posts: <%= @user.PostsCounter || 0 %></p>
        </div>
</div>
<div class="bio">
    <h3 class="bio-head">Bio</h3>
    <p class="bio-para"><%= @user.Bio %></p>
</div>
<section>
 <% @user.recent_posts.each do |post| %>
 <%= link_to  user_post_path(@user.id, post.id) do %>
   <div class="post-container">
     <h2>Post: <%= post.title %></h2>
     <p><%= post.text %></p>
    </div>
     <div class="post-details">
     <span class="post-details-para">Comments: <%= post.comments_counter %></span>
     <span class="post-details-para">Likes: <%= post.likes_counter %></span>
     </div>
<% end %>
<% end %>

<button class="button"><%= link_to "see all posts", user_posts_path(@user) %></button>
</section>
